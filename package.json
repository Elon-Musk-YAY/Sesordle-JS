{
  "name": "Sesordle",
  "productName": "Sesordle",
  "version": "1.0.0",
  "description": "6 Letter Wordle!",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make_win": "electron-forge make --platform win32",
    "make_linux": "electron-forge make --platform linux",
    "publish": "electron-forge publish",
    "mac-universal": "electron-forge make --arch=universal",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "Elon-Musk-YAY",
    "email": "91766805+Elon-Musk-YAY@users.noreply.github.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/icon.icns",
        "ignore": [
          "Makefile",
          ".gitignore",
          "src/icon.icns"
        ],
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "sesordle"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "asar": "^3.1.0",
    "axios": "^1.3.5",
    "electron-localshortcut": "^3.2.1",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "electron": "18.2.0"
  }
}
